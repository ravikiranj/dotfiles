# fix scrollback in putty
termcapinfo xterm* ti@:te@
# no startup message
startup_message off
# turn off visual bell
vbell off
# auto detach on
autodetach on
# clean up after exit
altscreen on
# set shell title
shelltitle "bash"
# scroll history
defscrollback 10000
# turn utf8 on
defutf8 on
# whole window doesn't hang if an individual goes for a toss
nonblock on
#set status line to last line
hardstatus alwayslastline
#set status line string
hardstatus string '%{= kw}[ %{= kb}%H%{= kw} ][%= %{= kw}%?%-Lw%?%{= kW}%n*%f %t%?%?%{= kw}%?%+Lw%?%?%= ] [ %m/%d/%y %C %A %{w}]%{w}'

# syntax: screen -t label order command
screen -t work1 0
screen -t work2 1
screen -t work3 2
screen -t work4 3
